// Test if, if-then, if-then-else, if-then-else-else-...

a = 0
if (true)
	a = 1

assert(a == 1)

if (false)
	a = 2
assert(a == 1)

if (true)
	a = 2
else
	a = 3
assert(a == 2)

if (false)
	a = 2
else
	a = 3
assert(a == 3)

if (false)
	a = 1
else if (false)
	a = 2
else
	a = 3
assert(a == 3)

if (false)
	a = 1
else if (true)
	a = 2
else
	a = 3
assert(a == 2)

a = 0
if (false)
	a = 1
else if (false)
	a = 2
else if (false)
	a = 3
assert(a == 0)
