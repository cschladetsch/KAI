{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pi",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pi",
				"match": "\\b(assert|==|)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pi",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pi",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "scope.pi"
}
